
<h1>Item Edit</h1>

<form method="POST" action="/lists/edit">
    <input type="'hidden" value="<%= item._id%>" name="id">
<div>
    <label>Drama Name</label>
    <input name="dramaName" type="text" value="<%= item.dramaName %>"/>
</div>

<div class="form-group">
    <label>Episode Numbers</label>
    <input name="episodeNum" type="number" value=""/>
    </div>

    <div class="form-group">
    <label>Drama Status</label>
    <select name="dramaStatus">
        <option value="plan To watch">plan To watch</option>
        <option value="currently watching">currently watching</option>
        <option value="completed">completed"</option>
    </select>
    </div>   


<br>
<div>
<button type="submit">Edit</button>
</div>
</form>